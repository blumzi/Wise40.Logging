#!/bin/awk -f

# vim:set filetype=awk

function mkfilename(t) {
    return "slews/slew-" sprintf("%03d", slewno) "-" t
}

BEGIN {
    slewno = 0
    fname = ""
    system("mkdir -p slews")
}

fname == "" && / UT .*Debug/{
    fname = mkfilename($1)
    next
}

/DebugASCOM[[:space:]]*SlewTo(Target)Async/ {
    slewno++
    fname = mkfilename($1)
}

{
    if (fname != "") print > fname
}
